<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="id.co.keriss.switching.ee">
 <class name="ShareTransaction">
  <id column="id" name="id" type="java.lang.Long">
   <generator class="sequence">
    <param name="sequence">sharetrans_sequence</param>
   </generator>
  </id>
  <property name="value" type="java.lang.Long">
    	<column name="value" sql-type="decimal(13,2)"/>
  </property>
  <property name="currency" type="string"/>
  <many-to-one name="share" class="id.co.keriss.switching.ee.Share" not-null="false"/>
  <set name="transaction" inverse="true">
		<key column="merchant"/>
		<one-to-many class="id.co.keriss.switching.ee.Transaction"/>
  </set>
 </class>
</hibernate-mapping>
